<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_between_views">

    <ImageView
        android:id="@+id/flag"
        android:layout_width="@dimen/flag_width"
        android:layout_height="@dimen/flag_height"
        android:background="@drawable/image_background"
        android:padding="1dp"
        android:layout_marginBottom="@dimen/margin_between_views"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/region_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/region_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginTop="@dimen/margin_between_views"
        app:layout_constraintTop_toBottomOf="@id/flag"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_between_views"
        app:layout_constraintTop_toTopOf="@id/region_label"
        app:layout_constraintStart_toEndOf="@id/region_label" />

    <TextView
        android:id="@+id/capital_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/capital_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginTop="@dimen/margin_between_views"
        app:layout_constraintTop_toBottomOf="@id/region_label"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/capital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_between_views"
        app:layout_constraintTop_toTopOf="@id/capital_label"
        app:layout_constraintStart_toEndOf="@id/capital_label" />

</androidx.constraintlayout.widget.ConstraintLayout>